<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@null"
            android:onClick="onHomeClicked"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_chevron_left"
            app:tint="@color/textcolor"
            android:layout_marginLeft="20dp"/>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/serch_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="6dp"
            app:iconifiedByDefault="false"
            app:queryHint="선물,유저 ID를 검색해보세요"
            app:searchIcon="@drawable/ic_search"
            android:background="@drawable/background_search"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="651dp"
        android:layout_height="69dp"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="선물 카테고리"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="87dp"
                android:layout_height="match_parent"
                android:background="@drawable/background_box1"
                android:fontFamily="@font/pretendard_bold"

                android:gravity="center"
                android:text="가벼운 선물"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="77dp"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="선물 기록"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

        </LinearLayout>
    </LinearLayout>


</LinearLayout>